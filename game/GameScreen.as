package  {		import flash.display.MovieClip;	import flash.events.MouseEvent;			public class GameScreen extends MovieClip {		var xPos:int;  		var yPos:int;		var score:Number = 0;		var gameScreen = GameScreen;						public function GameScreen():void {			addListeners(frontalLobe, parietalLobe, occipitalLobe, temporalLobe);								}				private function getPosition(target:Object):void {  			xPos = target.x;			yPos = target.y;								}				private function dragObject(evt:MouseEvent):void {			getPosition(evt.target);			evt.target.startDrag(true);					}				private function stopDragObject(evt:MouseEvent):void {			if (evt.target.hitTestObject(getChildByName(evt.target.name + "Target"))) {				evt.target.x = getChildByName(evt.target.name + "Target").x;				evt.target.y = getChildByName(evt.target.name + "Target").y;				score++;				responseText.text = "GOOD JOB!";			} else {				evt.target.x = xPos;				evt.target.y = yPos;				responseText.text = "UH OH! TRY AGAIN!";			}						if (score==4) {				responseText.text = "";				doneText.text = "WELL DONE! :D";				addChild(new AgainScreen());							}						evt.target.stopDrag();								}				private function addListeners(... objects):void {			for (var i:int = 0; i < objects.length; i++) {				objects[i].addEventListener(MouseEvent.MOUSE_DOWN, dragObject);				objects[i].addEventListener(MouseEvent.MOUSE_UP, stopDragObject);										}									}												}	}